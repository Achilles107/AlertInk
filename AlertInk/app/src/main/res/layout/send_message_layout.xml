<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:text="Wish Happy Birthday To"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/name_birthday"
        android:text="Name"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <EditText
        android:id="@+id/msg_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="20sp"
        android:hint="Your Message"
        android:layout_margin="5dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:background="@drawable/rounded_edit_text"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Text"
        android:onClick="sendTextMsg"
        android:id="@+id/button"
        android:padding="15dp"
        android:textSize="20sp"
        android:background="@drawable/bg_bordered_button"
        android:drawableRight="@drawable/textmsg1"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Whatsapp"
        android:padding="15dp"
        android:textSize="20sp"
        android:onClick="openWhatsapp"
        android:id="@+id/button2"
        android:background="@drawable/bg_bordered_button"
        android:drawableRight="@drawable/whatsapp2"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Call"
        android:onClick="callThem"
        android:padding="15dp"
        android:textSize="20sp"
        android:background="@drawable/bg_bordered_button"
        android:drawableRight="@drawable/call1"/>
</LinearLayout>
